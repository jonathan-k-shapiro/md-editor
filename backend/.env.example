# Application Configuration
APP_NAME="Markdown Document Management System"
APP_VERSION="0.1.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-in-production"
ENVIRONMENT="development"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/mdeditor"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="mdeditor"
DATABASE_USER="user"
DATABASE_PASSWORD="password"

# Redis Configuration (for caching and background tasks)
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY="your-jwt-secret-key-here"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
ALLOWED_HEADERS="*"

# Git Repository Configuration
GIT_REPOS_PATH="./repositories"
DEFAULT_GIT_BRANCH="main"

# Upload Configuration
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Testing Configuration (for test environment)
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/mdeditor_test"

# Email Configuration (for notifications)
SMTP_SERVER=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE="lax"

# API Documentation
DOCS_URL="/docs"
REDOC_URL="/redoc"
